<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agrosmart">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_novaleaf_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.AgroSmart">
        <activity android:name=".ConfigurarHumidadeSoloActivity"></activity>
        <activity
            android:name=".ConfugurarNivelAguaActivity"
            android:label="Nível de Água" />
        <activity
            android:name=".ConfigurarLuminosidadeActivity"
            android:label="Luminosidade" />
        <activity
            android:name=".ConfigurarHumidadeArActivity"
            android:label="Humidade" />
        <activity
            android:name=".ConfigurarTemperaturaActivity"
            android:label="Temperatura" />
        <activity android:name=".EstufaActivity" />
        <activity android:name=".MinhasEstufasActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".EntradaActivity" />
        <activity android:name=".DetailsActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>